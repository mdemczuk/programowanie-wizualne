        <Label Content="Author" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="134,177,0,0"/>
        <Button x:Name="buttonAddBook" Content="Add book" HorizontalAlignment="Left" Margin="144,288,0,0" VerticalAlignment="Top" Width="92" Click="buttonAddBook_Click"/>

    </Grid>
</Window>
