        xmlns:local="clr-namespace:Lab07"
        mc:Ignorable="d"
        Title="Add Book" Height="450" Width="400">
    <Grid>
        <TextBox x:Name="textboxTitle" HorizontalAlignment="Left" Height="23" Margin="133,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
