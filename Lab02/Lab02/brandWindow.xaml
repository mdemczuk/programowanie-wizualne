        <Button x:Name="brandReturn" Content="Powrót" HorizontalAlignment="Left" Margin="601,316,0,0" VerticalAlignment="Top" Width="75" Click="brandReturn_Click"/>
        <Label x:Name="labelSum" Content="Suma" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="601,216,0,0"/>
        <Label x:Name="brandSum" Content="" HorizontalAlignment="Left" Margin="601,247,0,0" VerticalAlignment="Top" Height="22" Width="66"/>

